{
  "name": "nocaflow",
  "version": "0.0.1",
  "description": "Filesystem-as-State for Phased LLM Swarms.",
  "main": "dist/cli.js",
  "bin": {
    "nocaflow": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "copy-assets": "mkdir -p dist/scaffold && cp -r src/scaffold/files dist/scaffold/",
    "build": "npm run clean && tsc && npm run copy-assets",
    "start": "npm run build && node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prepublishOnly": "npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/nocaflow.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/nocaflow/issues"
  },
  "homepage": "https://github.com/your-username/nocaflow#readme",
  "keywords": [
    "llm",
    "swarm",
    "agent",
    "orchestration"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.2",
    "dayjs": "^1.11.10",
    "js-yaml": "^4.1.0",
    "simple-git": "^3.22.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.4",
    "@types/yargs": "^17.0.32",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
